#!/bin/bash

status="`cat`"
CURL="curl -q -s"
self="<%= @node['hostname'] %>"

SESSION="`$CURL http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/kv/mysql/leader?consistent | egrep -i -o \"[0-9a-z]{8}-([0-9a-z]{4}-){3}[0-9a-z]{12}\"`"

# Find out if I am holding onto lock
LOCK_HOLDER="`$CURL http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/session/info/$SESSION | jq -r \".[] | .Node\"`"
if [ "$LOCK_HOLDER" == "$self" ]; then
  LEADER=true
fi

echo "$status" | jq ".[] | select((.Node==\"$self\") and (.CheckID==\"service:mysql\")) | .Status" | grep -q passing
if [ $? -eq 0 ]; then
  if [ "$SESSION" == "" ]; then
    # There is no leader, attempt to lock
    SESSION="`$CURL -X PUT -d '{"Name": "mysql"}' "http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/session/create?consistent" | egrep -i -o \"[0-9a-z]{8}-([0-9a-z]{4}-){3}[0-9a-z]{12}\"`"
    # If lock is acquired, mark myself as leader
    $CURL -X PUT -d '{"Name": "mysql"}' "http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/kv/mysql/leader?consistent&acquire=$SESSION" && LEADER=true
  fi
else
  # Failed check, so release lock if I am leader
  if [ "$LEADER" == "true" ]; then
    $CURL -X PUT "http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/kv/mysql/leader?release=$SESSION"
    LEADER=false
  fi
fi

# Update service tag
if [ "$LEADER" == "true" ]; then
  payload="`cat <%= @node['bcpc-consul']['conf_dir'] %>/services.json | jq -M -c 'to_entries | .[] | if .key==\"service\" then .value else .value[] | select(.name==\"mysql\") end | .tags += [\"primary\"]'`"
  $CURL -X PUT -d "$payload" http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/agent/service/register
else
  payload="`cat <%= @node['bcpc-consul']['conf_dir'] %>/services.json | jq -M -c 'to_entries | .[] | if .key==\"service\" then .value else .value[] | select(.name==\"mysql\") end'`"
  $CURL -X PUT -d "$payload" http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/agent/service/register
fi
