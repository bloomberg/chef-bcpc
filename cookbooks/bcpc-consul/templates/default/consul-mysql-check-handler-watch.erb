#!/bin/bash

status="`cat`"
self="<%= @node['hostname'] %>"
echo "$status" > /tmp/mysql-handler.log
echo "$status" | jq ".[] | select((.Node==\"$self\") and (.CheckID==\"service:mysql\")) | .Status" | grep -q passing
if [ $? -eq 0 ]; then
  curl -X PUT "http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/agent/service/maintenance/mysql?enable=false"
else
  curl -X PUT "http://<%= node['bcpc-consul']['client_addr'] %>:8500/v1/agent/service/maintenance/mysql?enable=true&reason=failed+check"
fi
