{
  "name": "BCPC-EphemeralWorknode",
  "default_attributes": {},
  "json_class": "Chef::Role",
  "run_list": [
    "role[BCPC-Ephemeral]"
  ],
  "description": "An ephemeral compute node in a BCPC cluster",
  "chef_type": "role",
  "override_attributes": {
    "bcpc" : {
      "aggregate_membership": ["ephemeral_compute"],
      "software_raid": {
        "enabled": true
      },
  	  "nova": {
  	    "ephemeral": true
  	  },
      "monitoring": {
        "prometheus_exporter": true
      }
    }
  }
}
