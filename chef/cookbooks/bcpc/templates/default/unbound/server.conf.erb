server:
<% @server.each do |k, v| %>
  <%= k %>: <%= v %>
<% end %>
<% @local_zones.each do |zone, nameservers| %>
  local-zone: <%= zone %> transparent
<% end %>
<% @forward.each do |domain, nameservers| %>
  forward-zone:
    name: <%= domain %>
  <% nameservers.each do |ns| %>
    forward-addr: <%= ns %>
  <% end %>
<% end %>
<% @local_zones.each do |zone, nameservers| %>
  <% nameservers.each do |ns| %>
  forward-zone:
    name: <%= zone %>
    forward-addr: <%= ns %>
  <% end %>
<% end %>
