[DEFAULT]
core_plugin = calico
state_path = /var/lib/neutron

[calico]
etcd_host = 127.0.0.1
etcd_port = 2379
<% if node['bcpc']['etcd']['ssl']['enabled'] %>
etcd_key_file = <%= node['bcpc']['etcd']['client']['key']['filepath'] %>
etcd_cert_file = <%= node['bcpc']['etcd']['client']['crt']['filepath'] %>
etcd_ca_cert_file = <%= node['bcpc']['etcd']['ca']['crt']['filepath'] %>
<% end %>

[oslo_concurrency]
lock_path = $state_path/lock
