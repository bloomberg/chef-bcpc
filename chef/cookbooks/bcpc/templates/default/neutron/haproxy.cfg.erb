listen neutron-api
  bind <%= @vip %>:9696 ssl crt /etc/haproxy/haproxy.pem
  balance source
  option tcpka
  option httpchk
  option httplog
  option forwardfor
<% @headnodes.each do |n| -%>
  server <%= n['hostname'] %> <%= n['ipaddress'] %>:9696 check inter 5s rise 1 fall 1
<% end -%>
