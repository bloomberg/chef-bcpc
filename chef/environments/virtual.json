{
  "name": "virtual",
  "description": "Virtualized BCPC Environment",
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "override_attributes": {
    "bcpc": {
      "grub": {
        "cmdline_linux": [
          "net.ifnames=0",
          "biosdevname=0"
        ]
      },
      "proxy": {
        "enabled": true,
        "proxies": {
          "http": "http://devproxy.bloomberg.com:82",
          "https": "http://devproxy.bloomberg.com:82"
        }
      },
      "dns_servers" : [ "10.10.10.10" ],
      "ntp": {
        "servers" : [ "10.10.10.10" ]
      }
    }
  }
}
